.posts{
  
}
.posts .top{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #E5E5E5;
}
.posts .top .img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.scroll-w{
  display: flex;
  flex-wrap: wrap;
}
.scroll-w .item{
  width: 50%;
  box-sizing: border-box;
  padding: 10rpx;
  border-bottom: 1rpx solid #E5E5E5;
  background-color: #FFF;
}

.scroll-w .img{
  width: 100%;
  display: block;
}

.scroll-w .left{
  border-right: 1rpx solid #E5E5E5;
}