/**index.wxss**/
page{
  height: 100%;
}
.home-page{
  font-size: 32rpx;
}
.posts{
  padding: 0 20rpx 20rpx 20rpx; 
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.posts .top{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
}
.posts .top .img{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.posts .content{
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.imgs-content{
  display: flex;
  flex-wrap: wrap;
}

.imgs-content .item{
  width: 33.333%;
  height: 250rpx;
}
.imgs-content .single{
  width: 100%;
  height: 480rpx;
}